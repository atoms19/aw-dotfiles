exec_always ags run '.config/ags/'
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway _JAVA_AWT_WM_NONREPARENTING=1


# window theme	
client.unfocused #9751E1 #49306d #ffffff #5c5c5c
